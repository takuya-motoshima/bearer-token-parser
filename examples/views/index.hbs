{{!< default}}
{{#contentFor 'title'}}API test{{/contentFor}}

{{#contentFor 'style'}}
  <link rel="stylesheet" type="text/css" href="{{baseUrl}}/node_modules/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/cosmo/bootstrap.min.css">
  <link rel="stylesheet" href="{{baseUrl}}/index.css">
{{/contentFor}}

{{#contentFor 'script'}}
  <script src="{{baseUrl}}/node_modules/jquery/dist/jquery.min.js"></script>
  <script src="{{baseUrl}}/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="{{baseUrl}}/node_modules/code-prettify/src/run_prettify.js?skin=sunburst"></script>
  <script src="{{baseUrl}}/node_modules/code-prettify/src/prettify.js"></script>
  <script type="module" src="{{baseUrl}}/index.js"></script>
{{/contentFor}}

<div class="container py-3 main" role="main">

  <section>

    <h1 class="title">Add a new user.</h1>

    <h3 class="subtitle">Endpoint URL</h3>
    <p class="text-primary"><span class="badge badge-primary mr-1">POST</span>{{baseUrl}}/users</p>
    
    <h3 class="subtitle">Authentication</h3>
    <table class="table w-auto">
      <tr>
        <th>Authentication methods<br>supported by this endpoint</th>
        <td>Bearer token</td>
      </tr>
    </table>

    <h3 class="subtitle">JSON body parameters</h3>
    <table class="table w-auto">
      <thead>
        <tr><th>Name</th><th>Type</th><th>Description</th></tr>
      </thead>
      <tbody>
        <tr><td>email</td><td>string</td><td>User email.Up to 255 characters are allowed.</td></tr>
        <tr><td>name</td><td>string</td><td>User name.Up to 30 characters are allowed.</td></tr>
      </tbody>
    </table>

    <h3 class="subtitle">Example requests</h3>
    <nav>
      <div class="nav nav-tabs" role="tablist">
        <a class="nav-item nav-link active" id="curlTab1" data-toggle="tab" href="#curlTabContent1" role="tab" aria-controls="curlTabContent1" aria-selected="true">cURL</a>
      </div>
    </nav>
    <div class="tab-content mb-3">
      <div class="tab-pane fade show active" id="curlTabContent1" role="tabpanel" aria-labelledby="curlTab1">
<pre class="prettyprint linenums">curl -X POST 'https://{{baseUrl}}/users' \
  -H "Content-type: application/json" \
  -H "Authorization: Bearer $BEARER_TOKEN" -d \
  '{
    "email": "bery@example.com",
    "name": "Bery"
  }';</pre>
      </div>
    </div>

    <h3 class="subtitle">Example responses</h3>
<pre class="prettyprint linenums mb-3">{
  "data": {
    "id": 1,
    "email": "bery@example.com",
    "name": "Bery@example.com",
    "created": "2020-11-19 15:38:00"
  }
}</pre>

    <h3 class="subtitle">Response fields</h3>
    <table class="table w-auto">
      <thead>
        <tr><th>Name</th><th>Type</th><th>Description</th></tr>
      </thead>
      <tbody>
        <tr><td>id</td><td>number</td><td>Unique identifier for the added user.</td></tr>
        <tr><td>email</td><td>string</td><td>Email of the added user.</td></tr>
        <tr><td>name</td><td>string</td><td>The name of the added user.</td></tr>
        <tr><td>created</td><td>string</td><td>Creation date of the added user.</td></tr>
      </tbody>
    </table>

    <h3 class="subtitle">Demo</h3>
    <form id="postUserForm" data-url="{{baseUrl}}/users">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label text-sm-right">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="email" placeholder="bery@example.com" autofocus required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label text-sm-right">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" placeholder="Bery" required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label text-sm-right">Token</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="token" value="{{{token}}}" id="postUserToken" required>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 offset-sm-2">
          <div class="form-group form-check">
            <input type="checkbox" name="enableToken" class="form-check-input" id="enablePostUserToken" data-target="#postUserToken" checked>
            <label class="form-check-label" for="enablePostUserToken">Enable token</label>
          </div>
        </div>
      </div>
      <p class="text-sm-right">
        <button class="btn btn-primary" type="submit">Submit</button>
      </p>
      <nav>
        <div class="nav nav-tabs" role="tablist">
          <a class="nav-item nav-link active" id="bodyTab1" data-toggle="tab" href="#bodyTabContent1" role="tab" aria-controls="bodyTabContent1" aria-selected="true">Body</a>
          <a class="nav-item nav-link" id="headersTab1" data-toggle="tab" href="#headersTabContent1" role="tab" aria-controls="headersTabContent1" aria-selected="true">Headers</a>
        </div>
      </nav>
      <div class="tab-content mb-3">
        <div class="tab-pane fade show active" id="bodyTabContent1" role="tabpanel" aria-labelledby="bodyTab1">
          <pre class="prettyprint linenums" data-response-body></pre>
        </div>
        <div class="tab-pane fade" id="headersTabContent1" role="tabpanel" aria-labelledby="headersTab1">
          <pre class="prettyprint linenums" data-response-headers></pre>
        </div>
      </div>
    </form>
  </section>

</div>
